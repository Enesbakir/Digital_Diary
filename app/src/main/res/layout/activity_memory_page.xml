<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/memoryConstraint"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#111111"
    android:padding="16dp"
    tools:context=".MemoryPageActivity">

    <ImageButton
        android:id="@+id/addButton"
        android:layout_width="64dp"
        android:layout_height="50dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="32dp"
        android:background="#111"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_tick_button" />

    <EditText
        android:id="@+id/entryText"
        android:layout_width="315dp"
        android:layout_height="190dp"
        android:layout_marginTop="12dp"
        android:background="#333333"
        android:gravity="top|left"
        android:hint="Start Typing..."
        android:textColor="#eee"
        android:textColorHint="#aaaaaa"
        android:textCursorDrawable="@drawable/color_cursor"
        android:textSize="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.489"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/entryTitle" />

    <TextView
        android:id="@+id/editTextDate"
        android:layout_width="180dp"
        android:layout_height="36dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="4dp"
        android:background="#333333"
        android:gravity="center"
        android:inputType="date"
        android:textColor="#eee"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/entryLocation"
        android:layout_width="133dp"
        android:layout_height="43dp"
        android:layout_marginTop="72dp"
        android:background="#333333"
        android:gravity="center"
        android:text="Istanbul"
        android:textColor="#eee"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.283"
        app:layout_constraintStart_toEndOf="@+id/entryTitle"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/entryTitle"
        android:layout_width="181dp"
        android:layout_height="40dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="72dp"
        android:background="#333333"
        android:hint="Title"
        android:textColor="#eee"
        android:textColorHint="#aaaaaa"
        android:textCursorDrawable="@drawable/color_cursor"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/entryImage"
        android:layout_width="314dp"
        android:layout_height="250dp"
        android:layout_marginTop="24dp"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/entryText"
        app:layout_constraintVertical_bias="0.0"
        tools:srcCompat="@drawable/download_icon_image_viewer_1329319935813321436_256" />

    <VideoView
        android:id="@+id/entryVideo"
        android:layout_width="317dp"
        android:layout_height="280dp"
        android:layout_marginTop="24dp"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.489"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/entryText" />

    <ImageButton
        android:id="@+id/pdfButton"
        android:layout_width="64dp"
        android:layout_height="50dp"
        android:layout_marginTop="4dp"
        android:background="#111"
        app:layout_constraintEnd_toStartOf="@+id/addButton"
        app:layout_constraintStart_toEndOf="@+id/editTextDate"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_pdf_button" />

</androidx.constraintlayout.widget.ConstraintLayout>